= form_for @order do |f|
  =error_messages_for(@order)

  .row
    .col-md-3
      .form-group
        = f.label :address
        = f.text_area :address
  .row
    .col-md-3
      .form-group
        = f.label :status
        = f.number_field :status
  .row
    .col-md-3
      .form-group
        = f.label :comment
        = f.text_area :comment

  .actions
    = f.submit 'Сохранить', class: 'btn btn-primary'
