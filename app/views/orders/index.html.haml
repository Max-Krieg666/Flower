.page-header
  %h1 Список заказов

%table.table.table-bordered.table-hover.table-condensed
  %thead
    %tr
      %th Заказ
      %th Пользователь
      %th ФИО
      %th Телефон
      %th Адрес доставки
      %th Статус
      %th Комментарий
      %th
      %th
      %th

  %tbody
    - @orders.each do |order|
      %tr
        %td= order.id
        %td= order.user_id
        %td= order.fio
        %td= order.phone
        %td= order.address
        %td= order.status_view
        %td= order.comment
        %td= link_to 'Показать', order
        %td= link_to 'Редактировать', edit_order_path(order)
        %td= link_to 'Удалить', order, method: :delete, data: { confirm: 'Вы уверены?' }

%br
= paginate @orders